<UserControl x:Class="EventTrackerWPF.CustomElements.ImageComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventTrackerWPF.CustomElements"
             xmlns:ExtraThings="clr-namespace:EventTrackerWPF.CustomElements"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="PART_TextBox"
                 Grid.Column="00"
                 VerticalContentAlignment="Center"
                 Padding="8,4"
                 Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.Background>
                <ImageBrush ImageSource="{Binding ImageForTextBox, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Stretch="Fill"/>
            </TextBox.Background>
        </TextBox>

        <ExtraThings:GridButton x:Name="PART_Button"
                                Grid.Column="1"
                                Width="48"
                                Height="{Binding ActualHeight, ElementName=PART_TextBox}"
                                Margin="4,0,0,0"
                                MouseLeftButtonUp="PART_Button_MouseLeftButtonUp">
            <Image Source="{Binding ButtonImage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Stretch="Fill"/>
        </ExtraThings:GridButton>

        <ComboBox x:Name="PART_Combo"
                  Visibility="Collapsed"
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                  StaysOpenOnEdit="False"
                  IsEditable="False"
                  DropDownClosed="PART_Combo_DropDownClosed"
                  SelectionChanged="Part_Combo_SelectionChanged"/>
    </Grid>
</UserControl>
