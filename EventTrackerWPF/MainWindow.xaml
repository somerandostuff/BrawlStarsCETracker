                                    </Image.RenderTransform>
                                </Image>
                                <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Beam.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="312,385,991,102" Opacity=".56" CacheMode="BitmapCache">
