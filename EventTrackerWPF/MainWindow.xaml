                        <Grid x:Name="RightmostClouds">
                            <Image Source="/Assets/Backgrounds/AvD_Angels/Cloud 6.png" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="1360" Height="92" Margin="0,0,0,156" CacheMode="BitmapCache"/>
                            <Grid>
                                <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Halfcircle.png" Stretch="Fill" Margin="800,486,-136,175" RenderTransformOrigin="0.5,0.5" Opacity="0.8">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="-1"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                                <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Beam.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="1095,427,206,140" Opacity=".48">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="185"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                                <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Beam.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="939,467,354,107" Opacity=".74">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="152"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Grid>
                            <Image Source="/Assets/Backgrounds/AvD_Angels/Cloud 4.png" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="1360" Height="85" Margin="0,0,0,122" CacheMode="BitmapCache"/>
                            <Grid>
                                <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Halfcircle.png" Stretch="Fill" Margin="952,512,-244,129" RenderTransformOrigin="0.5,0.5" Opacity="0.8" CacheMode="BitmapCache">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="-2"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                                <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Beam.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="1124,490,168,52" Opacity=".56" CacheMode="BitmapCache">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="191"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Grid>
                            <Image Source="/Assets/Backgrounds/AvD_Angels/Cloud 2.png" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="1360" Height="128" Margin="0,0,0,21" CacheMode="BitmapCache"/>
                        </Grid>
                        <Grid x:Name="BottomHighClouds">
                            <Image Source="/Assets/Backgrounds/AvD_Angels/Mini Cloud 1.png" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-70,244,0,0" Height="102" CacheMode="BitmapCache"/>
                            <Image Source="/Assets/Backgrounds/AvD_Angels/Mini Cloud 2.png" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,174,-252,0" Height="121" CacheMode="BitmapCache"/>
                        </Grid>
                        <Grid x:Name="TopHighClouds">
                            <Image Source="/Assets/Backgrounds/AvD_Angels/Mini Cloud 3.png" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-92,-50,0,0" Height="223" CacheMode="BitmapCache"/>
                            <Image Source="/Assets/Backgrounds/AvD_Angels/Mini Cloud 4.png" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,-76,-52,0" Height="223" CacheMode="BitmapCache"/>
                        </Grid>
                        <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Halfcircle.png" Stretch="Fill" Margin="823,567,45,-2" RenderTransformOrigin="0.5,0.5" CacheMode="BitmapCache">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-6"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                        <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Halfcircle.png" Stretch="Fill" Margin="79,524,747,0" CacheMode="BitmapCache"/>
                        <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Beam.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Margin="1060,517,214,-117" Opacity=".84" CacheMode="BitmapCache">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="158"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                        <Image Source="/Assets/Backgrounds/AvD_Angels/Glow Halfcircle.png" Stretch="Fill" Margin="-90,496,958,69" RenderTransformOrigin="0.5,0.5" CacheMode="BitmapCache">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="12"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                        <Image Source="/Assets/Backgrounds/AvD_Angels/Cloud 1.png" VerticalAlignment="Bottom" HorizontalAlignment="Center" CacheMode="BitmapCache"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="Mainscreen">
            <Image Source="/Assets/Header.png" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Right" Width="1360" Height="34"/>
        </Grid>
        <Grid x:Name="UserInterfaces">
            <ExtraThings:GridButton Margin="1025,615,10,10" MouseLeftButtonUp="GridButton_MouseLeftButtonUp" Visibility="Collapsed">
                <ExtraThings:DrawTextOutlined FontFamily="Lilita One" FontSize="72" Text="Press me" StrokeThiccness="5" ShadowColor="Black" ShadowOffset="0, 3" ></ExtraThings:DrawTextOutlined>
            </ExtraThings:GridButton>
            <Grid x:Name="MainMenuUI" Visibility="Visible">
                <Grid x:Name="MoneyUI" VerticalAlignment="Top" HorizontalAlignment="Right" Height="55" Width="170" Margin="0,10,143,0" MouseLeftButtonUp="MoneyUI_MouseLeftButtonUp">
                    <Image Source="/Assets/Left Notch Header.png" HorizontalAlignment="Left"/>
                    <Image Source="/Assets/Right Notch Header.png" HorizontalAlignment="Right"/>
                    <Image Source="/Assets/Header.png" HorizontalAlignment="Center" Width="155" Stretch="Fill"/>
                    <Image Source="Assets/Icons/Gem.png" HorizontalAlignment="Left" Margin="-21,0,0,-2" Width="53"/>
                    <ExtraThings:DrawTextOutlined x:Name="MoneyCount" FontFamily="Lilita One" FontSize="38" Text="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="32,0,4,0"/>
                </Grid>
                <ExtraThings:GridButton x:Name="BTN_Settings" Width="122" Height="70" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0" MouseLeftButtonUp="BTN_Settings_MouseLeftButtonUp">
                    <Image Source="/Assets/Icons/Hamburger Button.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ExtraThings:GridButton>
            </Grid>
            <Grid x:Name="SettingsUI" Visibility="Hidden">
                <ExtraThings:DrawTextOutlined Text="SETTINGS" FontFamily="Lilita One" FontSize="48" StrokeThiccness="4" ShadowColor="Black" ShadowOffset="0, 3" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="60"/>
                <Grid Width="240" Height="160" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="90,100,0,0">
                    <ExtraThings:DrawTextOutlined Text="ENABLE BACKGROUND ANIMATIONS" FontFamily="Lilita One" FontSize="22" StrokeThiccness="0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Height="70"/>
                    <ExtraThings:GridButton Height="90" VerticalAlignment="Bottom">
                        <ExtraThings:CheckboxAsImage x:Name="Chk_EnableAnimations" ImageSource="/Assets/Toggles ON.png" ImageSourceIfUnchecked="/Assets/Toggles OFF.png" VerticalAlignment="Bottom" MouseLeftButtonUp="Chk_EnableAnimations_MouseLeftButtonUp">
                            <ExtraThings:DrawTextOutlined Text="ON" FontFamily="Lilita One" StrokeThiccness="2.5" ShadowColor="Black" ShadowOffset="0, 2.5" VerticalAlignment="Top" Margin="10,-4,120,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="90" Opacity=".9"/>
                            <ExtraThings:DrawTextOutlined Text="OFF" FontFamily="Lilita One" StrokeThiccness="2.5" ShadowColor="Black" ShadowOffset="0, 2.5" VerticalAlignment="Top" Margin="120,-4,10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="90" Opacity=".9"/>
                        </ExtraThings:CheckboxAsImage>
                    </ExtraThings:GridButton>
                </Grid>
                <Grid Width="240" Height="160" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="375,100,0,0">
                    <ExtraThings:DrawTextOutlined Text="USE MONOSPACE FONT FOR EVENT COUNTER" FontFamily="Lilita One" FontSize="22" StrokeThiccness="0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Height="70"/>
                    <ExtraThings:GridButton Height="90" VerticalAlignment="Bottom">
                        <ExtraThings:CheckboxAsImage x:Name="Chk_EnableAnimations1" ImageSource="/Assets/Toggles ON.png" ImageSourceIfUnchecked="/Assets/Toggles OFF.png" VerticalAlignment="Bottom">
                            <ExtraThings:DrawTextOutlined Text="ON" FontFamily="Lilita One" StrokeThiccness="2.5" ShadowColor="Black" ShadowOffset="0, 2.5" VerticalAlignment="Top" Margin="10,-4,120,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="90" Opacity=".9"/>
                            <ExtraThings:DrawTextOutlined Text="OFF" FontFamily="Lilita One" StrokeThiccness="2.5" ShadowColor="Black" ShadowOffset="0, 2.5" VerticalAlignment="Top" Margin="120,-4,10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="90" Opacity=".9"/>
                        </ExtraThings:CheckboxAsImage>
                    </ExtraThings:GridButton>
                </Grid>
                <Grid Width="240" Height="160" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="660,100,0,0">
                    <ExtraThings:GridButton x:Name="BTN_ChangeTheme" Height="90" VerticalAlignment="Bottom" MouseLeftButtonUp="BTN_ChangeTheme_MouseLeftButtonUp">
                        <Image Source="/Assets/Blue Button.png"/>
                        <ExtraThings:DrawTextOutlined Text="Change theme" FontFamily="Lilita One" StrokeThiccness="2.5" ShadowColor="Black" ShadowOffset="0, 2.5" VerticalAlignment="Top" Margin="0,-4,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="90"/>
                    </ExtraThings:GridButton>
                </Grid>
            </Grid>
            <Grid x:Name="ThemeSelectorUI" Visibility="Hidden">
                <ExtraThings:DrawTextOutlined Text="SELECT THEME" FontFamily="Lilita One" FontSize="48" StrokeThiccness="4" ShadowColor="Black" ShadowOffset="0, 3" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="60"/>
                <ExtraThings:GridButton x:Name="BTN_ThemeSelectorUI_Basic" Width="412" Height="163" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,101,0,0" MouseLeftButtonUp="BTN_ThemeSelectorUI_Basic_MouseLeftButtonUp">
                    <Image Source="/Assets/Backgrounds/Basic/Thumbnail.png"/>
                    <ExtraThings:DrawTextOutlined CacheMode="BitmapCache" Text="Default" FontFamily="Lilita One" FontSize="24" StrokeThiccness="2" ShadowColor="Black" ShadowOffset="0, 1.5" HorizontalAlignment="Center" Width="377"/>
                </ExtraThings:GridButton>
                <ExtraThings:GridButton x:Name="BTN_ThemeSelectorUI_Brawloween2023" Width="412" Height="163" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,101,0,0" MouseLeftButtonUp="BTN_ThemeSelectorUI_Brawloween2023_MouseLeftButtonUp">
                    <Image Source="/Assets/Backgrounds/Brawloween2023/Thumbnail.png"/>
                    <ExtraThings:DrawTextOutlined CacheMode="BitmapCache" Text="Brawloween 2023" FontFamily="Lilita One" FontSize="24" StrokeThiccness="2" ShadowColor="Black" ShadowOffset="0, 1.5" HorizontalAlignment="Center" Width="377"/>
                </ExtraThings:GridButton>
                <ExtraThings:GridButton x:Name="BTN_ThemeSelectorUI_Angels" Width="412" Height="163" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,101,25,0" MouseLeftButtonUp="BTN_ThemeSelectorUI_Angels_MouseLeftButtonUp">
                    <Image Source="/Assets/Backgrounds/AvD_Angels/Thumbnail.png"/>
                    <ExtraThings:DrawTextOutlined CacheMode="BitmapCache" Text="Angels vs. Demons (Angels)" FontFamily="Lilita One" FontSize="24" StrokeThiccness="2" ShadowColor="Black" ShadowOffset="0, 1.5" HorizontalAlignment="Center" Width="377"/>
                </ExtraThings:GridButton>
            </Grid>
        </Grid>
        <Grid x:Name="NavButtons" Visibility="Collapsed">
            <ExtraThings:GridButton Width="254" Height="104" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,-24,-123,0" MouseLeftButtonUp="BTN_GoHome">
                <Image Source="/Assets/Icons/Header Button Home.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ExtraThings:GridButton>
            <ExtraThings:GridButton Width="292" Height="104" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-161,-24,0,0" MouseLeftButtonUp="BTN_GoBack">
                <Image Source="/Assets/Icons/Header Button Back.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ExtraThings:GridButton>
        </Grid>
        <Grid x:Name="DebugUI_AlwaysOnTop" IsHitTestVisible="False" Visibility="Visible">
            <ExtraThings:GridButton x:Name="UptimeButton" Margin="242,2,944,676" MouseLeftButtonUp="UptimeButton_MouseLeftButtonUp">
                <ExtraThings:DrawTextShakyOutlined x:Name="ApplicationUptime" Text="Uptime: N/A" FontFamily="Lilita One" CacheMode="BitmapCache" FontSize="24" StrokeThiccness="0" ShakeIntensity="0.75" ShadowColor="Black" ShadowOffset="0, 0" Margin="0,0,1,0"/>
            </ExtraThings:GridButton>
        </Grid>
    </Grid>
    <Window.Resources>
        <Storyboard x:Key="BrawloweenTheme" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="GhostImageTranslate"
                Storyboard.TargetProperty="Y"
                From="0"
                To="-429"
                Duration="0:00:15"/>
            <DoubleAnimation
                Storyboard.TargetName="GhostImageTranslate"
                Storyboard.TargetProperty="X"
                From="0"
                To="60"
                Duration="0:00:15"/>
        </Storyboard>
        <Storyboard x:Key="BasicTheme" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="BasicImageTranslate"
                Storyboard.TargetProperty="Y"
                From="0"
                To="-242"
                Duration="0:00:09"/>
            <DoubleAnimation
                Storyboard.TargetName="BasicImageTranslate"
                Storyboard.TargetProperty="X"
                From="0"
                To="34"
                Duration="0:00:09"/>
        </Storyboard>
        <Storyboard x:Key="AvD_AngelsTheme_LeftmostClouds" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation
                Storyboard.TargetProperty="RenderTransform.ScaleX"
                From="1" To="0.89" Duration="0:00:13.3333" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="AvD_AngelsTheme_RightmostClouds" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation
                Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                From="1" To="1.11" Duration="0:00:06.6667" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetProperty="RenderTransform.Children[1].X"
                From="0" To="-56.1" Duration="0:00:06.6667" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="AvD_AngelsTheme_BottomHighClouds" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation
                Storyboard.TargetProperty="RenderTransform.X"
                From="0" To="-56" Duration="0:00:11.6667" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="AvD_AngelsTheme_Icons" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="AngelsImageTranslate"
                Storyboard.TargetProperty="Y"
                From="0"
                To="-425"
                Duration="0:00:15"/>
            <DoubleAnimation
                Storyboard.TargetName="AngelsImageTranslate"
                Storyboard.TargetProperty="X"
                From="0"
                To="60"
                Duration="0:00:15"/>
        </Storyboard>
    </Window.Resources>
</Window>
