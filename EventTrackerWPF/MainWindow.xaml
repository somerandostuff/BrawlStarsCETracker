                            Stretch="Uniform"
                            RenderTransformOrigin="0.5,0.5"
                            Opacity=".2"
                            Margin="-562,-128,-14,-476"
                            RenderOptions.BitmapScalingMode="LowQuality">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="8"/>
                                <TranslateTransform x:Name="AngelsImageTranslate"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                    <Image Source="/Assets/Backgrounds/AvD_Angels/Glow.png" Height="343" Width="515" Margin="0,150,0,0" Opacity="1" Stretch="Fill" HorizontalAlignment="Center" CacheMode="BitmapCache"/>
                    <Image Source="/Assets/Backgrounds/AvD_Angels/Glow.png" Height="455" Width="515" Margin="0,150,0,0" Opacity="1" Stretch="Fill" HorizontalAlignment="Center" CacheMode="BitmapCache"/>
                    <Image Source="/Assets/Backgrounds/AvD_Angels/Glow.png" Height="343" Width="515" Margin="0,150,0,0" Opacity="1" Stretch="Fill" HorizontalAlignment="Center" CacheMode="BitmapCache"/>
                    <Image Source="/Assets/Backgrounds/AvD_Angels/Arch Gate Thing.png" HorizontalAlignment="Center" Width="1420" Margin="0,20,0,-31" Opacity="1" CacheMode="BitmapCache"/>
                    <Image Source="/Assets/Backgrounds/AvD_Angels/Glow2.png" Stretch="Fill" Margin="0,-30,0,0" HorizontalAlignment="Center" Width="972" Height="780" CacheMode="BitmapCache"/>
                    <Image Source="/Assets/Backgrounds/AvD_Angels/Glow.png" Height="327" Width="370" Stretch="Fill" Margin="0,77,0,0" CacheMode="BitmapCache"/>
                    <Image Source="/Assets/Backgrounds/AvD_Angels/Sky Blur Up.png" VerticalAlignment="Bottom" CacheMode="BitmapCache"/>
                    <Grid Name="Grid_Bg_ForeItems_AvD_Angels_Clouds">
                        <Image Source="/Assets/Backgrounds/AvD_Angels/Cloud 8.png" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="1360" Height="108" Margin="0,0,0,187"/>
